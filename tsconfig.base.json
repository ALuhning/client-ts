{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "target": "esnext",
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "paths": {
      "@nillion/client-wasm/*": [
        "client-wasm/src/*"
      ],
      "@nillion/client-vms/*": [
        "client-vms/src/*"
      ]
    }
  }
}
