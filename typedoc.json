{
  "$schema": "https://typedoc.org/schema.json",
  "cleanOutputDir": true,
  "entryPoints": [
    "packages/client-core/src/index.ts",
    "packages/client-payments/src/index.ts",
    "packages/client-react-hooks/src/index.ts",
    "packages/client-vms/src/index.ts"
  ],
  "entryPointStrategy": "expand",
  "projectDocuments": [
    "packages/client-core/README.md",
    "packages/client-payments/README.md",
    "packages/client-react-hooks/README.md",
    "packages/client-vms/README.md"
  ],
  "readme": "README.md",
  "out": "docs",
  "name": "@nillion Client-Ts Api Docs",
  "excludeExternals": true,
  "exclude": [
    "**/node_modules/**",
    "**/test/**",
    "**/examples/**",
    "**/fixture/**",
    "**/resources/**",
    "**/test-utils/**"
  ],
  "externalPattern": ["**/node_modules/**"],
  "excludePrivate": true,
  "excludeProtected": true,
  "excludeInternal": true,
  "categorizeByGroup": true,
  "categoryOrder": ["Core", "Payments", "React Hooks", "VMs", "WASM", "*"],
  "navigation": {
    "includeCategories": true,
    "includeGroups": true
  },
  "sort": ["alphabetical"],
  "plugin": [
    "typedoc-plugin-zod",
    "typedoc-plugin-mermaid"
  ]
}
