{
  "name": "@nillion/payments",
  "version": "0.1.0",
  "type": "module",
  "browser": "dist/index.js",
  "types": "src/index.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "node esbuild.config.mjs",
    "build.protobuf": "protoc --plugin=../../node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=src proto/nilchain.proto",
