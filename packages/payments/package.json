    "effect": "^3.5.5",
    "protobufjs": "^7.3.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@keplr-wallet/types": "^0.12.107",
    "ts-proto": "^1.181.0"
  }
