{
  "name": "@nillion/client-wasm",
  "version": "0.1.0",
  "private": true,
  "license": "Apache-2.0",
  "type": "module",
  "browser": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "build:debug": "wasm-pack build --target web --dev --out-name index --out-dir dist . -- --profile release_debug",
    "build:dev": "wasm-pack build --target web --dev --out-name index --out-dir dist .",
    "build:prod": "wasm-pack build --target web --release --out-name index  --out-dir dist .",
    "release:dev": "npm run clean && npm run build:dev && npm pack"
  },
  "sideEffects": [
    "dist/snippets/**"
  ],
  "files": [
    "dist"
  ]
}
