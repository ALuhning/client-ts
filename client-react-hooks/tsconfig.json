{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "dom", "DOM.Iterable"],
    "module": "esnext",

    "noEmit": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",

    "skipLibCheck": true,
    "strict": true,

    "baseUrl": "./src",
    "paths": {
      "#/*": ["/*"]
    }
  }
}
